            android:entries="@array/pref_range_distance_titles_meter"
            android:entryValues="@array/pref_range_distance_values_meter"
            android:negativeButtonText="@string/pref_text_negative_button"
            android:positiveButtonText="@null" />

        <ListPreference
            android:key="@string/pref_key_default_distance_units"
            android:title="@string/pref_title_distance_units"
            android:defaultValue="@string/pref_default_value_distance_units"
            android:entries="@array/pref_distance_units_titles"
            android:entryValues="@array/pref_distance_units_values"

            android:negativeButtonText="@string/pref_text_negative_button"
            android:positiveButtonText="@null" />
    </PreferenceCategory>



    <PreferenceCategory android:title = "@string/pref_title_demo_mode">
    <!-- A 'parent' preference, which enables/disables child preferences (below)
