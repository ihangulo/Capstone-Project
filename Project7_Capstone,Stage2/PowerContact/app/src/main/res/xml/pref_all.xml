    <PreferenceCategory android:title = "@string/pref_category_title_map_settings">
        <ListPreference
            android:key="@string/pref_key_default_marker_type"
            android:title="@string/pref_title_default_marker_type"
            android:defaultValue="@string/pref_default_value_marker_type"
            android:entries="@array/pref_marker_type_list_titles"
